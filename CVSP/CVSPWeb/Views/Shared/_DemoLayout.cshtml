@{
	Layout = "~/Views/Shared/_RSCDemoLayout.cshtml";
}

@section css {
	<link href="@ChemSpider.Compounds.CompoundsIntegration.ToolkitCSS" rel="stylesheet" />
	<link href="@ChemSpider.Compounds.CompoundsIntegration.CSS" rel="stylesheet" />
	<link href="@ChemSpider.Datasources.DatasourcesIntegration.CSS" rel="stylesheet" />

	@RenderSection("css", required: false)
}

@section featured {
	@RenderBody()
}

@section scripts {
	<script src="@ChemSpider.Compounds.CompoundsIntegration.ToolkitScript"></script>
	<script src="@ChemSpider.Compounds.CompoundsIntegration.Script"></script>
	<script src="@ChemSpider.Datasources.DatasourcesIntegration.Script"></script>
	@Scripts.Render("~/widgets/js/js-cvsp")


	@RenderSection("scripts", required: false)

	<script type="text/javascript">
		$(document).ready(function () {
			if ($.support.bootstrap())
				$('[data-toggle="tooltip"]').bootstrapTooltip();
		});
	</script>
}
